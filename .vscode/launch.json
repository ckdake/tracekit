{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: tracekit Module",
            "type": "debugpy",
            "request": "launch",
            "module": "tracekit",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["--help"]
        },
        {
            "name": "Python: Pytest Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["${file}", "-v"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Pytest All",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["-v"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["${workspaceFolder}/tests", "-v", "-s"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTEST_CURRENT_TEST": "${file}"
            }
        }
    ]
}
